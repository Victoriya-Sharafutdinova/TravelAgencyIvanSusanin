<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (Globals.AuthClient != null)
                {
                    @Html.ActionLink("Путешествия", "Index", "Travels", new { area = "" }, new { @class = "navbar-brand" })
                }
                </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Globals.AuthClient != null)
                    {
                        <li>@Html.ActionLink("Туры", "Index", "Tours")</li>
                        <li>@Html.ActionLink("Статистика", "Index", "Statistics")</li>
                        <li>@Html.ActionLink("Личный кабинет", "Index", "User")</li>
                        <li>@Html.ActionLink("Выйти", "Exit", "Clients")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Авторизация", "Authorization", "Clients")</li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @Scripts.Render("~/bundles/jquery")
        <!--стили jquery ui-->
        @Styles.Render("~/Content/themes/base/css")
        <!--сама библиотека jquey ui-->
        @Scripts.Render("~/bundles/jqueryui")
        @RenderSection("scripts", required: false)


        <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css">

        <script src="//code.jquery.com/jquery-1.12.4.js"></script>

        <script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

        <script>
            $(function () {
                $("#DateBegin").datepicker({
                    dateFormat: "dd.mm.yy",
                    monthNames: ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь', 'Июль', 'Август', 'Сентябрь',
                        'Октябрь', 'Ноябрь', 'Декабрь'],
                    dayNamesMin: ['Вс', 'Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб'],
                    firstDay: 1,
                    
                });

                var dateBegin = $("#DateBegin").val(); 
                var DateBegin = $("#DateBegin").datepicker("getDate");
                $.get("@Url.Action("AddTour", "Travels")", { DateBegin: DateBegin });
            });
        </script>
        <script>
            $(function () {
                $("#DateEnd").datepicker("getDate");
                $("#DateEnd").datepicker({
                    
                    dateFormat: "dd.mm.yy",
                    monthNames: ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь', 'Июль', 'Август', 'Сентябрь',
                        'Октябрь', 'Ноябрь', 'Декабрь'],
                    dayNamesMin: ['Вс', 'Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб'],
                    firstDay: 1,
                });
                var DateEnd = $("#DateEnd").datepicker("getDate");
                $("#DateEnd").datepicker().val() 
            });
        </script>
        <style>
            #ui-datepicker-div {
                width: 200px;
                background: aliceblue;
            }
        </style>


