@{
    ViewBag.Title = "Личный кабинет";
}

<h2>Личный кабинет</h2>
<div>
    <div class="form-group">
        <label>Имя: </label>
        <span>@ViewBag.User.FIO</span>
    </div>
    <div class="form-group">
        <label>Логин: </label>
        <span>@ViewBag.User.Login</span>
    </div>
    <div class="form-group">
        <label>Почта: </label>
        <span>@ViewBag.User.Email</span>
    </div>
    <div class="form-group">
        <label>Пароль: </label>
        <span>@ViewBag.User.Password</span>
    </div>
    <label>Статистика пользователя</label>
    <table class="table">
        <tr>
            <th>
                Всего туров заказано
            </th>
            <th>
                "Любимый" тур
            </th>
            <th>
                Средний чек
            </th>
            <th></th>
        </tr>
        <tr>
            <td>
                @ViewBag.service.HowManyTourTheClient(ViewBag.User.Id)
            </td>
            <td>
                @ViewBag.service.PopularTour(ViewBag.User.Id)
            </td>
            <td>
                @ViewBag.service.AverageCustomerCheck(ViewBag.User.Id)
            </td>
        </tr>
    </table>
</div>
