@model TravelAgencyIvanSusaninDAL.ViewModel.TravelViewModel

@{
    ViewBag.Title = "Просмотр путешествия";
}

<h2>Просмотр путешествия</h2>
@using (Html.BeginForm("", "Travels", FormMethod.Post))
{<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ФИО Клиента
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FIO)
        </dd>

        <dt>
            Сумма
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalCost)
        </dd>

        <dt>
            Статус
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TravelStatus)
        </dd>

        <dt>
            Дата создания
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateCreate)
        </dd>

        <dt>
            Дата исполнения
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateImplement)
        </dd>
    </dl>
    <table class="table">
        <tr>
            <th>
                Тур
            </th>
            <th>
                Количество
            </th>
            <th>
                Дата начала
            </th>
            <th>
                Дата конца
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.TourTravels)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TourName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateBegin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateEnd)
            </td>
        </tr>
        }
    </table>
</div>
}
    
<p>
    @Html.ActionLink("Вернуться к списку путешествия", "Index")
</p>
